<script type="text/javascript">
    /*    function onDeviceReady() {
console.log("Device is ready");
}*/

    function sendToServer(val) {
        alert(val);
        var res = {};
        res.value = val;
        $.ajax({
            url: "https://morning-brushlands-7219.herokuapp.com/",
            type: 'POST',
            data: res,
            timeout: 10000,
            success: function (s) {
                alert("Succes " + s);
            },
            error: function (e) {
                alert("error " + JSON.stringify(e));
            }
        });

    }

    function connectSuccess(c) {
        alert(c);
    }

    function connectError(e) {
        alert(e);
    }

    //document.addEventListener("deviceready", onDeviceReady, true);
    //document.addEventListener("click", recognizeSpeech, true);

    $('#forward').click(function () {
        //alert('forward pressed');
        sendToServer("f");
    });
    $('#back').click(function () {
        //alert('back pressed');
        sendToServer("b");
    });
    $('#left').click(function () {
        //alert('left');
        sendToServer("l");
    });
    $('#right').click(function () {
        //alert('right pressed');
        sendToServer("r");
    });
    $('#stop').click(function () {
        //alert('stop pressed');
        sendToServer("s");
    });

    /*$('.add').click(function(){

